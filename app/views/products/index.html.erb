<h1>Products</h1>
<% if user_signed_in? %>
  <p>Hey <%= current_user.email %>! Welcome back!</p>
<% end %>
<% @products.each do |product| %>
  <div class="product">
    <div class='product-upvote'>
      <div class="product-arrow"></div>
      <div class='product-count'>0</div>
    </div>
    <div class='product-body'>
      <h3><%= product.name %></h3>
      <p><%= product.tagline %></p>
    </div>
  </div>
<% end %>
